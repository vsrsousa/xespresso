import paramiko
import sys

# --- CONFIGURAÇÃO ---
# Edite os valores abaixo com suas informações
HOST = "medusa.fis.uerj.br"  
USER = "vinicius"  
PASSWORD = "AcimadeTudoRN@1981" 
PORT = 22
# --------------------

try:
    print(f"Tentando conectar a {USER}@{HOST} usando a senha...")
    ssh = paramiko.SSHClient()
    ssh.set_missing_host_key_policy(paramiko.AutoAddPolicy())
    ssh.connect(HOST, username=USER, password=PASSWORD, port=PORT)
    print("✅ Conexão bem-sucedida! Executando um comando de teste.")
    _, stdout, _ = ssh.exec_command("echo 'Conectado com sucesso!'")
    print(stdout.read().decode().strip())
except Exception as e:
    print(f"❌ Falha na conexão: {e}")
finally:
    ssh.close()
